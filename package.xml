    </files>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src</directory>
            <outputDirectory>sources/src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/proto</directory>
            <outputDirectory>sources/proto</outputDirectory>
            <includes>
                <include>*.proto</include>
            </includes>
        </fileSet>
